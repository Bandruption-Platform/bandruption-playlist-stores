{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "jsx": "react-native",
    "baseUrl": ".",
    "types": ["jest", "node"],
    "paths": {
      "@/*": ["./*"],
      "@shared/types": ["../../packages/shared/src"],
      "@shared/ui": ["../../packages/ui/src"],
      "@shared/supabase": ["../../packages/supabase/src"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    "nativewind-env.d.ts"
  ]
}
